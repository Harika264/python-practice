import string
def print_rangoli(size):
    # Get lowercase alphabets
    alphabet = string.ascii_lowercase
    
    # Create the pattern lines
    lines = []
    for i in range(size):
        # Characters from current letter down to 'a'
        left = alphabet[size-1 : size-1-i : -1]
        right = alphabet[size-1-i : size]
        row = "-".join(left + right)
        # Center align with width = 4*size - 3
        lines.append(row.center(4*size - 3, "-"))
    
    # Print top half + middle + bottom half
    print("\n".join(lines + lines[-2::-1]))

if __name__ == '__main__':
    n = int(input())
    print_rangoli(n)
